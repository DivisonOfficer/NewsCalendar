<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/ll_bottom_dialog"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        tools:context=".activity.main.MainActivity">

        <TextView
            android:id="@+id/tv_category"
            android:layout_width="match_parent"
            android:layout_marginTop="24dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ibm_plex_sans_medium"
            android:gravity="center"
            android:text="카테고리를 선택하세요"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/cg_category"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="16dp"
            app:ensureMinTouchTargetSize="false"
            app:itemSpacing="8dp"

            app:layout_constraintBottom_toTopOf="@+id/bt_scrap"
            app:layout_constraintTop_toBottomOf="@+id/tv_category"
            tools:layout_editor_absoluteX="16dp" />

        <TextView
            android:id="@+id/bt_scrap"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/btn_primary"
            android:fontFamily="@font/ibm_plex_sans_semibold"
            android:gravity="center"
            android:text="스크랩"
            android:textSize="18sp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
