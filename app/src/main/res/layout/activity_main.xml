<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="month"
            type="String"
            android:value="September"/>
        <variable
            name="year"
            type="String" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.main.MainActivity">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_head"
            app:layout_constraintTop_toTopOf="parent"
            >
            <FrameLayout
                android:id="@+id/bt_month_previous"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="36dp"
                android:alpha="0.5"
                android:background="@drawable/item_button_round"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:focusable="false"
                    android:src="@drawable/ic_arrow"
                    app:tint="@color/black" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/bt_month_next"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="20dp"
                android:alpha="0.5"
                android:background="@drawable/item_button_round"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:focusable="false"
                    android:rotation="180"
                    android:src="@drawable/ic_arrow"
                    app:tint="@color/black" />
            </FrameLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"

                android:fontFamily="@font/poppins_medium"
                android:text="@{month, default = September}"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="-2dp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="top"
                android:lineSpacingExtra="2sp"
                android:text="@{year, default = 2021}"
                android:textColor="@color/secondaryText"
                android:translationY="-0.84sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_head">

            <include layout="@layout/item_weekdays" />
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
